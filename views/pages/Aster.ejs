<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Viewing Page</title>
    
</head>
<body id="body">
    <script>
        var a = document.getElementById("body")
        a.style.backgroundImage = "url('https://airwallpaper.com/wp-content/uploads/wall004/Space-Desktop-Background-1920x1080-1.jpg')"
    </script>
    <h1>Asteroid Information</h1>
    <div>
        <% arr.forEach(function(r) { %>
        <table class="table">
            <tr>
                <td class="left">Asteroids Name</td>
                <td><%=r.name%></td>
            </tr>
            <tr>
                <td>Absolute Magnitude</td>
                <td><%=r.absolute_magnitude%></td>
            </tr>
            <tr>
                <td>Minimum Estimated Diameter</td>
                <td><%=r.estimated_diameter_min%></td>
            </tr>
            <tr>
                <td>Maximum Estimated Diameter</td>
                <td><%=r.estimated_diameter_max%></td>
            </tr>
            <tr>
                <td>Is The Asteroid Potentially Hazardous</td>
                <td><%=r.is_potentially_hazardous_asteroid%></td>
            </tr>
            <tr>
                <td>Approach Date</td>
                <td><%=r.approachDate%></td>
            </tr>
            <tr>
                <td>Velocity:</td>
                <td><%=r.velocity%></td>
            </tr>
            <tr>
                <td>Miss Distance</td>
                <td><%=r.miss_distance%></td>
            </tr>
            <tr>
                <td>Orbiting Body</td>
                <td><%=r.orbitingBody%></td>
            </tr>
                
            <% }); %>
        </table>
        <style>
            #body{
                color: white;
                position:absolute;
                right: 500px;
                text-align: center;
                font-size: large;
            }

            .table{
                border: 1px solid white;
                width: 500px;
                height: 200px;
                background: linear-gradient(45deg,red, black,  rgb(33, 47, 241), purple)
            }
            
        </style>
    </div>
    <form action="/">
        <input type="submit" value="Go to Display page"/>
    </form>
    
</body>

</html>